{
  "name": "gmail-mcp-server",
  "version": "1.1.0",
  "description": "MCP (Model Context Protocol) server for Gmail integration with OAuth2 authentication. Enables AI assistants to interact with Gmail.",
  "main": "dist/index.js",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx",
    "dev:server": "tsx src/index.ts",
    "setup": "tsx src/get-refresh-token-desktop.ts",
    "test": "tsx test-gmail-connection.ts",
    "test:connection": "tsx test-gmail-connection.ts",
    "test:list": "node test-list-emails.js",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JaviEzpeleta/gmail-mcp-server.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "gmail",
    "email",
    "oauth2",
    "google-api",
    "typescript",
    "claude",
    "ai-assistant",
    "automation"
  ],
  "author": "Javi Ezpeleta <javi@example.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JaviEzpeleta/gmail-mcp-server/issues"
  },
  "homepage": "https://github.com/JaviEzpeleta/gmail-mcp-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "dotenv": "^17.2.1",
    "googleapis": "^155.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "CLAUDE.md",
    "LICENSE",
    "package.json"
  ]
}